# /etc/sudoers
#
# This file MUST be edited with the 'visudo' command as root.
#
# See the man page for details on how to write a sudoers file.
# Host alias specification

# User alias specification

# Cmnd alias specification
Cmnd_Alias ADMIN = /sbin/shutdown, /bin/ls
Cmnd_Alias NETWORK = /etc/init.d/networking
Cmnd_Alias SUSPEND = /usr/local/sbin/xfsuspend

# Defaults

Defaults	!lecture,tty_tickets,!fqdn
Defaults  timestamp_timeout = 30
Defaults  passprompt = "[sudo] Enter %u's password for run as %U@%h: "

# User privilege specification
root	ALL=(ALL) ALL

# Members of the admin group may gain root privileges
%admin ALL=(ALL) ALL
%admin ALL=(root) NOPASSWD: ADMIN, NETWORK, SUSPEND
